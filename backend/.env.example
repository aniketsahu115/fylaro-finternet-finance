# Fylaro Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration (MongoDB/PostgreSQL)
DATABASE_URL=mongodb://localhost:27017/fylaro
# DATABASE_URL=postgresql://username:password@localhost:5432/fylaro

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# IPFS Configuration
INFURA_PROJECT_ID=your-infura-project-id
INFURA_PROJECT_SECRET=your-infura-project-secret
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-key

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
PRIVATE_KEY=your-wallet-private-key-for-contract-deployment

# Smart Contract Addresses (deploy and update these)
INVOICE_TOKEN_CONTRACT=0x...
MARKETPLACE_CONTRACT=0x...
SETTLEMENT_CONTRACT=0x...

# External API Keys
MORALIS_API_KEY=your-moralis-api-key
ALCHEMY_API_KEY=your-alchemy-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Credit Bureau APIs (for external credit scoring)
EXPERIAN_API_KEY=your-experian-api-key
EQUIFAX_API_KEY=your-equifax-api-key
TRANSUNION_API_KEY=your-transunion-api-key

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_UPLOAD_MAX=10

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_MAX_CONNECTIONS=1000

# Security Configuration
CORS_ORIGIN=http://localhost:3000
HELMET_CSP_ENABLED=true
SESSION_SECRET=your-session-secret-key

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# API Base URL
API_BASE_URL=http://localhost:3001

# Platform Configuration
PLATFORM_FEE_BASIS_POINTS=250
VERIFICATION_FEE_ETH=0.01
FEE_RECIPIENT_ADDRESS=0x...

# Finternet Integration
FINTERNET_API_URL=https://api.finternet.org
FINTERNET_API_KEY=your-finternet-api-key
UNIFIED_LEDGER_ENDPOINT=https://ledger.finternet.org

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/fylaro_test
TEST_PRIVATE_KEY=test-private-key-for-testing
TEST_RPC_URL=http://localhost:8545
